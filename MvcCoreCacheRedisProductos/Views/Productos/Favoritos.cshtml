@model IEnumerable<MvcCoreCacheRedisProductos.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Productos Favoritos</h1>

@if(Model != null)
{
    <table class="table table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Imagen)" style="width: 150px; height: 150px;"/>
            </td>
            <td>
                <a asp-controller="Productos" 
                    asp-action="DeleteFavorito" 
                    asp-route-idproducto="@item.IdProducto" 
                    class="btn btn-danger">
                    Eliminar Favorito
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <h1 style="color: blue">No hay productos favoritos</h1>
}